{
  "name": "mj-react-form-builder",
  "versizon": "2.0.26",
  "description": "A React form builder package using Tailwind CSS",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "scripts": {
    "build": "yarn build-cjs && yarn build-esm",
    "build-cjs": "rimraf ./dist/cjs && tsc --outDir dist/cjs",
    "build-esm": "rimraf ./dist/esm && tsc --outDir dist/esm --module es2015",
    "release": "npm run build && standard-version && git push --follow-tags && npm publish"
  },
  "files": [
    "dist/**/*",
    "index.css"
  ],
  "keywords": [
    "react",
    "form",
    "builder",
    "typescript"
  ],
  "author": "Marcos Jimenez",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.3",
    "@eslint/js": "^9.9.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.9.0",
    "globals": "^15.9.0",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1"
  },
  "dependencies": {
    "react-hook-form": "^7.53.0",
    "react-number-format": "^5.4.1"
  },
  "packageManager": "yarn@1.22.22",
  "version": "0.0.10"
}
