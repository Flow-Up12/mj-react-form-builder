{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,                    
    "emitDeclarationOnly": true,           
    "outDir": "dist",                     
    "rootDir": "src"                      
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}